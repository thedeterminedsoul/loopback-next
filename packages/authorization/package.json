{
  "name": "@loopback/authorization",
  "description": "A LoopBack component for authorization support.",
  "version": "0.8.0",
  "keywords": [
    "LoopBack",
    "Authorization"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "IBM Corp.",
  "copyright.owner": "IBM Corp.",
  "repository": {
    "type": "git",
    "url": "https://github.com/strongloop/loopback-next.git",
    "directory": "packages/authorization"
  },
  "engines": {
    "node": "^10.16 || 12 || 14 || 15"
  },
  "scripts": {
    "acceptance": "lb-mocha \"dist/__tests__/acceptance/**/*.js\"",
    "build": "lb-tsc",
    "clean": "lb-clean loopback-authorization*.tgz dist package *.tsbuildinfo",
    "integration": "lb-mocha \"dist/__tests__/integration/**/*.js\"",
    "pretest": "npm run build",
    "test": "lb-mocha \"dist/__tests__/**/*.js\"",
    "unit": "lb-mocha \"dist/__tests__/unit/**/*.js\"",
    "verify": "npm pack && tar xf loopback-authorization*.tgz && tree package && npm run clean"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "README.md",
    "dist",
    "src",
    "!*/__tests__",
    "!/fixtures"
  ],
  "peerDependencies": {
    "@loopback/core": "^2.15.0"
  },
  "dependencies": {
    "@loopback/security": "^0.4.0",
    "debug": "^4.3.1",
    "tslib": "^2.1.0"
  },
  "devDependencies": {
    "@loopback/build": "^6.3.0",
    "@loopback/testlab": "^3.3.0",
    "@types/debug": "^4.1.5",
    "@types/node": "10.17.56",
    "casbin": "^5.6.0"
  }
}
